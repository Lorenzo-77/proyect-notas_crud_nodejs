<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fa fa-refresh fa-spin" style="font-size:24px"></i></a>
                </h4>
                <p>{{description}}</p>

                <!--Eliminar-->
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">
                        Eliminar
                    </button>
                </form>

            </div>
        </div>
    </div>
    {{else}}
    <!--Crear nueva nota-->
    <div class="col-md-4 mx-auto">
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Hola {{user.name}}</h1>
            <p class="lead">No hay notas aun</p>
            <a href="/notes/add" class="btn btn-success btn-block">Crear Nota</a>
        </div>
    </div>
    </div>
    {{/each}}
</div>